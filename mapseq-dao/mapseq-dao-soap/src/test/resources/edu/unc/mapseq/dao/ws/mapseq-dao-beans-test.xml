<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

  <bean id="configurationService" class="edu.unc.mapseq.config.MaPSeqConfigurationServiceImpl" singleton="true">
    <!-- <property name="webServiceHost" value="152.54.9.10" /> -->
    <property name="webServiceHost" value="localhost" />
  </bean>

  <bean id="fileDataDAO" class="edu.unc.mapseq.dao.ws.FileDataDAOImpl" init-method="init" singleton="true">
    <property name="configurationService" ref="configurationService" />
  </bean>

  <bean id="sampleDAO" class="edu.unc.mapseq.dao.ws.SampleDAOImpl" init-method="init" singleton="true">
    <property name="configurationService" ref="configurationService" />
  </bean>

  <bean id="jobDAO" class="edu.unc.mapseq.dao.ws.JobDAOImpl" init-method="init" singleton="true">
    <property name="configurationService" ref="configurationService" />
  </bean>

  <bean id="studyDAO" class="edu.unc.mapseq.dao.ws.StudyDAOImpl" init-method="init" singleton="true">
    <property name="configurationService" ref="configurationService" />
  </bean>

  <bean id="flowcellDAO" class="edu.unc.mapseq.dao.ws.FlowcellDAOImpl" init-method="init" singleton="true">
    <property name="configurationService" ref="configurationService" />
  </bean>

  <bean id="workflowDAO" class="edu.unc.mapseq.dao.ws.WorkflowDAOImpl" init-method="init" singleton="true">
    <property name="configurationService" ref="configurationService" />
  </bean>

  <bean id="workflowRunDAO" class="edu.unc.mapseq.dao.ws.WorkflowRunDAOImpl" init-method="init" singleton="true">
    <property name="configurationService" ref="configurationService" />
  </bean>

  <bean id="mapseqBean" class="edu.unc.mapseq.dao.MaPSeqDAOBean">
    <property name="fileDataDAO" ref="fileDataDAO" />
    <property name="sampleDAO" ref="sampleDAO" />
    <property name="jobDAO" ref="jobDAO" />
    <property name="studyDAO" ref="studyDAO" />
    <property name="flowcellDAO" ref="flowcellDAO" />
    <property name="workflowDAO" ref="workflowDAO" />
    <property name="workflowRunDAO" ref="workflowRunDAO" />
  </bean>

</beans>
